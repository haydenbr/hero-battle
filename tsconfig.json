{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"paths": {
			"@hero-battle/*": ["src/app/*"],
			"@hero-battle/environment": ["src/environments/environment"]
		}
	},
	"exclude": ["src/test.ts", "**/*.spec.ts"]
}
